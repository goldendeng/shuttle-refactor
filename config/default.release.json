{
	"commit": {
		"quilt": false,
		"pkgver":  "git describe --tags --long %(ref)s | awk -F'-' '{printf \"%%s+r%%s+%%s\",$1,$2,$3}'",
		"dist": "experimental"
	},
	"release": {
		"quilt": true,
		"pkgver": "git describe --abbrev=0 --tags %(ref)s",
		"dist": "unstable"
	},
	"release-candidate": {
		"quilt": true,
		"pkgver": "echo $(git describe --abbrev=0 --tags %(ref)s)~next",
		"dist": "unstable"
	},
	"build_args": ["use_network"]
}
